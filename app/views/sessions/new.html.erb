<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class="text-danger">
  Email:
  </div>
  <div class="alert alert-info">
  <%= text_field_tag :email %>
  </div>
  <div class="text-danger">
  Password:
  </div>
  <div class="alert alert-info"> 
  <%= password_field_tag :password %>
  </div>
  <div class="text-danger">
  <%= submit_tag "Submit" %>
  </div>
<% end %>